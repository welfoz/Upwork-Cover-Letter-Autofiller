{
  "name": "Upwork Cover Letter Autofiller",
  "version": "1.1",
  "manifest_version": 3,
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": ["*://www.upwork.com/*"],
      "js": ["content.js"]
    }
  ],
  "description": "Autofill the Upwork Cover Letter. For Freelancers. Save Time. Increase your response rate by automatically saying the client name. Define cover letter templates.",
  "permissions": ["storage"],
  "host_permissions": ["*://www.upwork.com/*"],
  "content_security_policy": {
    "extension_pages":"script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources" :  ["popup.js"],
      "matches" : [ "<all_urls>" ]
    }
  ], 
  "icons" : {
    "16" : "icon16.png",
    "48" : "icon48.png",
    "124" : "icon128.png"
  }
}
